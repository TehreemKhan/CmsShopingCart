@model CmsShopingCart.Models.ForgotPasswordModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "_MyLayout";
}
<!--/ForgotPassword -->
<section class="banner-bottom">
    <div class="container">
        <div class="content-grid">
            <div class="text-center icon">
                <span class="fa fa-unlock-alt"></span>
            </div>
            <div class="content-bottom">
                <h2 class="text-center">ForgotPassword</h2>
                <hr />
                <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="field-group">
                        <div class="content-input-field">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="content-input-field">
                        <button type="submit" class="btn">ForgotPassword</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>
<!-- /ForgotPassword -->
<!--/shipping-->
<partial name="ThemeComponent/_Shipping" />
<!--Footer-->
<partial name="ThemeComponent/_Footer" />

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

